<style>
    .custom-tooltip::before {
    max-width: 10rem;
    white-space: normal;
    }
</style>
    
    
    <main class="px-2 md:px-16 xl:px-40 w-full grid gap-36">

        <section class="hero">
            <div class="grid items-center justify-center gap-12 md:gap-12 text-center">
                <h1 class="text-5xl md:text-6xl font-bold"><%= t('home.title') %></h1>
                <p class="text-lg text-secondary-black md:text-2xl md:px-40 lg:px-64"><%= t('home.description') %></p>

                <div class="flex items-center justify-center gap-8">
                    <%= link_to t('home.button1'), new_score_path, class: "btn btn-primary m-2 duration-100 hover:scale-110 bg-primary text-white px-4 py-2 rounded-lg shadow-md md:text-2xl" %>
                    <%= link_to t('home.button2'), pages_about_path, class: "btn color-white  m-2 duration-100 hover:scale-110 bg-whitesmoke text-gray-700 px-4 py-2 rounded-lg shadow-md md:text-2xl" %>
                </div>
            </div>
        </section>
        
        <section id="aboutUs" class="grid grid-cols-1 items-center justify-center gap-10">
            <div class="section-divider"></div>
            <h2 class="text-4xl md:text-5xl font-bold mb-2 md:mb-4 text-gray-700 text-center md:text-left"><%= t('home.whatToExpect.title') %></h2>

            <div class="flex flex-wrap items-center justify-center">
                <div class="border w-70 border-gray-300 p-5 m-4 rounded-xl shadow-md">
                    <div class="flex items-center justify-start gap-5 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="w-8 h-8 text-primary bi bi-people-fill" viewBox="0 0 16 16">
                            <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
                        </svg>
                        <h2 class="text-lg text-gray-700 font-bold md:text-2xl"><%= t('home.whatToExpect.questions.title') %></h2>
                    </div>
                    <div class="bottom_container">
                        <p class="text-lg md:text-2xl"><%= t('home.whatToExpect.questions.description') %></p>
                    </div>
                </div>
            
                <div class="border w-70 border-gray-300 p-5 m-4 rounded-xl shadow-md">
                    <div class="flex items-center justify-start gap-5 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="w-8 h-8 text-primary bi bi-flag" viewBox="0 0 16 16">
                            <path d="M14.778.085A.5.5 0 0 1 15 .5V8a.5.5 0 0 1-.314.464L14.5 8l.186.464-.003.001-.006.003-.023.009a12 12 0 0 1-.397.15c-.264.095-.631.223-1.047.35-.816.252-1.879.523-2.71.523-.847 0-1.548-.28-2.158-.525l-.028-.01C7.68 8.71 7.14 8.5 6.5 8.5c-.7 0-1.638.23-2.437.477A20 20 0 0 0 3 9.342V15.5a.5.5 0 0 1-1 0V.5a.5.5 0 0 1 1 0v.282c.226-.079.496-.17.79-.26C4.606.272 5.67 0 6.5 0c.84 0 1.524.277 2.121.519l.043.018C9.286.788 9.828 1 10.5 1c.7 0 1.638-.23 2.437-.477a20 20 0 0 0 1.349-.476l.019-.007.004-.002h.001M14 1.221c-.22.078-.48.167-.766.255-.81.252-1.872.523-2.734.523-.886 0-1.592-.286-2.203-.534l-.008-.003C7.662 1.21 7.139 1 6.5 1c-.669 0-1.606.229-2.415.478A21 21 0 0 0 3 1.845v6.433c.22-.078.48-.167.766-.255C4.576 7.77 5.638 7.5 6.5 7.5c.847 0 1.548.28 2.158.525l.028.01C9.32 8.29 9.86 8.5 10.5 8.5c.668 0 1.606-.229 2.415-.478A21 21 0 0 0 14 7.655V1.222z"/>
                        </svg>
                        <h3 class="text-lg text-gray-700 font-bold md:text-2xl"><%= t('home.whatToExpect.time.title') %></h3>
                    </div>
                    <div class="bottom_container">
                        <p class="text-lg md:text-2xl"><%= t('home.whatToExpect.time.description') %></p>
                    </div>
                </div>
            
                <div class="border w-70 border-gray-300 p-5 m-4 rounded-xl shadow-md">
                    <div class="flex items-center justify-start gap-5 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="w-8 h-8 text-primary bi bi-clipboard" viewBox="0 0 16 16">
                            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1z"/>
                            <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0z"/>
                        </svg>
                        <h3 class="text-lg text-gray-700 font-bold md:text-2xl"><%= t('home.whatToExpect.result.title') %></h3>
                    </div>
                    <div class="bottom_container">
                        <p class="text-lg md:text-2xl"><%= t('home.whatToExpect.result.description') %></p>
                    </div>
                </div>
            </div>
        </section>

        <section class="grid gap-8">
            <div class="section-divider"></div>
            <h2 class="m-auto text-4xl font-bold md:text-5xl text-center">
                <%= t('home.madeBy') %>
            </h2>
            <div class="section-divider"></div>
        </section>

      <%= render partial: "stats" %>

      <%= render partial: "language_carousel" %>

      <section class="px-8 grid gap-2 md:gap-10">
        <h2 class="m-auto text-center font-bold text-4xl md:text-5xl">
            <%= t('home.blogSectionTitle') %>
        </h2>


        <div class="flex gap-10 overflow-auto pt-5 w-full">
            <!-- 5 newest blogs -->
            <%= render @blogs %>
        </div>

        <%= link_to t('home.otherBlogs'), blogs_path, class: "btn color-white  m-2 mx-auto bg-whitesmoke text-gray-700 px-4 py-2 rounded-lg shadow-md md:text-2xl" %>
      </section>
</main>