<a class="w-64 lg:w-96 flex-[0_0_auto]" href="<%= blog_path(blog) %>">
  <div class="indicator max-w-full">

    <% if blog.new_badge? %>
      <div class="indicator-item badge badge-primary">New</div>
    <% end %>

    <%= image_tag src=blog.image_src, alt: blog.image_alt, class: ""  %>
  </div>

  <h2 class="font-bold text-lg"><%=  blog.title %></h2>
  <div class="blog_image_text flex">
      <p class="text-md mr-auto"><%=  blog.time_to_read %> min read</p>
      <p class="text-md"><%=  blog.created_at.strftime('%b %d, %Y') %></p>
  </div>


</a>